<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
	xmlns:android   = "http://schemas.android.com/apk/res/android"
        id          = "org.mitre4.HelloWorld"
        version     = "1.0.0" >

    <name>TicTacToe Game</name>

    <description>
        This is a sample TicTacToe Game.
    </description>

    <author href="https://github.com/kdavis2015/TicTacToeApp.git" email="kdavis@mitre.org">
        Kevin Davis
    </author>

	<icon src="icon.png" />
	<gap:splash src="splash.png" />

	<gap:platform name="ios" />
	<gap:platform name="android" />


    <uses-sdk android:minSdkVersion="19"
              android:targetSdkVersion="19"
              android:maxSdkVersion="19" />
			  
	<feature>
		<param name="andriod-package" value="org.apache.cordova.device.Device" />
	</feature>
	
	<feature>
		<param name="andriod-package" value="org.apache.cordova.console" />
	</feature>

	<feature name="Camera">
		<param name="android-package" value="org.apache.cordova.CameraLauncher" />
	</feature>

	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.console" version="0.2.11" />
	<gap:plugin name="org.apache.cordova.camera" version="0.3.2" />

</widget>